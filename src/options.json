{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "http://example.com/example.json",
    "type": "object",
    "title": "Options Main Schema",
    "description": "PCF Sass Options Schema",
    "default": {},
    "examples": [
        {
            "name": "css/file.css"
        }
    ],
    "required": [
        "name"
    ],
    "additionalProperties": true,
    "properties": {
        "name": {
            "$id": "#/properties/name",
            "type": "string",
            "title": "File Name",
            "description": "An explanation about the purpose of this instance.",
            "default": "",
            "examples": [
                "css/file.css"
            ]
        }
    }
}